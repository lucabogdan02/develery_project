{{ form_start(form, {'attr': {'class': 'form-contact'}}) }}

<div class="form-group mt-3">
    {{ form_label(form.sender) }}
    {{ form_widget(form.sender) }}
</div>

<div class="form-group mt-3">
    {{ form_label(form.email) }}
    {{ form_widget(form.email) }}
</div>

<div class="form-group mt-3">
    {{ form_label(form.content) }}
    {{ form_widget(form.content) }}
</div>

<button type="submit" class="btn send-btn border-2 rounded-pill shadow-lg mt-4 fw-medium">{{ button_label|default('Küldés') }}</button>

{{ form_end(form) }}

